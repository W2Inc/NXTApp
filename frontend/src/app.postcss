* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	/* min-width: 0; */
	/* TODO: Consequence of this on every element? */
	/*transition:
		color 0.25ms linear,
		background-color 0.25s linear;*/

	&:focus:is:not(dialog) {
		outline: var(--outline);
		outline-offset: var(--outline-offset);
	}
}

body {
	height: 100dvh;
	background: var(--background-color);
}

hr {
	border: none;
	margin: 6px 0px;
	border-bottom: 2px solid var(--border-color);
	border-left: 2px solid var(--border-color);
	border-radius: var(--br);
}

html {
	scroll-behavior: smooth;
}

html:has(dialog[open]) {
	overflow: hidden;

	&::backdrop {
		pointer-events: none;
		touch-action: none;
	}
}

ul,
ol {
	padding-inline-start: 20px;
}

img {
	max-width: 100%;
	height: auto;
	vertical-align: middle;
	font-style: italic;
	background-repeat: no-repeat;
	background-size: cover;
	shape-margin: 1rem;
}

textarea {
	font-family: "Monaspace", monospace;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	padding: 10px 0px;
	line-height: 1.4;
}

p {
	margin-block-start: 0.5em;
	margin-block-end: 0.5em;
}

kbd {
	color: var(--text-3);
	background-color: var(--shade-01);
	border: 1px solid var(--shade-03);
	border-radius: 4px;
	box-shadow:
		0 1px 1px var(--shade-03),
		0 2px 0 0 var(--shade-01) inset;
	display: inline-block;
	font-size: 0.85em;
	font-weight: 700;
	line-height: 1;
	padding: 2px 4px;
	white-space: nowrap;
}

label {
	font-size: 14px;
	color: #a6a6a6;
}

/* TODO: Use this for settings transition properties instead of custom ones */
.transition {
	transition-property: color, background-color, border-color, text-decoration-color, fill,
		stroke, opacity, box-shadow, transform, filter, backdrop-filter;
	transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
	transition-duration: 0.15s;
}

.center {
	display: flex;
	align-items: center;
	gap: 8px;

	&.v {
		flex-direction: column;
	}
}

/* TODO: Remove this */
.center.v {
	kbd {
		color: var(--text-3);
		background-color: var(--shade-01);
		border: 1px solid var(--shade-03);
		border-radius: 4px;
		box-shadow:
			0 1px 1px var(--shade-03),
			0 2px 0 0 var(--shade-01) inset;
		display: inline-block;
		font-size: 0.85em;
		font-weight: 700;
		line-height: 1;
		padding: 2px 4px;
		white-space: nowrap;
	}

	.center {
		display: flex;
		align-items: center;
		gap: 8px;
	}
}

.markdown-render-body {
	--element-block: 0.5em;

	-webkit-text-size-adjust: 100%;
	margin: 0;
	font-family:
		-apple-system,
		BlinkMacSystemFont,
		Segoe UI,
		Noto Sans,
		Helvetica,
		Arial,
		sans-serif,
		"Apple Color Emoji",
		"Segoe UI Emoji";
	font-size: 16px;
	line-height: 1.5;
	word-wrap: break-word;
	text-rendering: optimizeLegibility;
	text-shadow: unset;

	& h1 {
		font-size: 2em;
		padding: unset;
		border-bottom: 1px solid var(--border-color);
	}

	& p {
		line-height: 28px;
	}

	& blockquote {
		margin-block: var(--element-block);
		padding: 0 0.5em;
		color: var(--text-3);
		border-left: 0.25em solid var(--border-color);

		& p {
			font-style: italic;
			margin: 0;
		}
	}

	& strong {
		font-weight: 600;
	}

	& a {
		color: var(--primary);
		background-color: transparent;
		text-decoration: none;

		&:hover {
			text-decoration: underline;
		}
	}

	& img {
		border-radius: var(--br);
	}

	& ul {
		margin-block: var(--element-block);
		list-style: disc;

		& li {
			/*margin-bottom: 0.5em;*/
		}

		/* If they have a li with an input set to checkbox */
		&:has(li input[type="checkbox"]) {
			list-style: none;
			padding-inline-start: 0;
		}
	}

	& pre:has(code[class*="language-"]) {
		margin-block: var(--element-block);
		display: grid;
		background: var(--shade-02);
		border-radius: var(--br);
		border: 1px solid var(--border-color);
		color: var(--text-1);
		font-size: 16px !important;

		& > code[class*="language-"] {
			background: inherit;
			color: inherit;
			border-radius: inherit;
			padding: 16px;
			max-width: min-content;
			border: none;
			margin: 0;
		}
	}

	& code {
		margin-block: var(--element-block);
		padding: 4px;
		background: var(--shade-02);
		border-radius: var(--br);
		border: 1px solid var(--border-color);
		color: var(--text-1);
		font-size: 14px;
	}

	& table {
		margin-block: var(--element-block);
		border-collapse: collapse;

		& th,
		td {
			padding: 6px 13px;
			text-align: left;
		}

		& tr:nth-child(even) {
			background-color: var(--shade-02);
		}

		& th {
			color: var(--foreground-color);
			background-color: var(--shade-01);
			border: 1px solid var(--border-color);
		}

		& td {
			border: 1px solid var(--border-color);
		}
	}
}

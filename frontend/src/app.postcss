@font-face {
	font-family: "Monaspace";
	src: url("/fonts/MonaspaceArgon-Regular.woff") format("woff");
	font-display: swap;
}

@font-face {
	font-family: "Geist";
	src: url("/fonts/Geist.woff2") format("woff2");
	font-display: swap;
}

/* See: https://tailwindcss.com/docs/screens */
@custom-media --sm screen and (max-width: 640px);
@custom-media --md screen and (max-width: 768px);
@custom-media --lg screen and (max-width: 1024px);
@custom-media --xl screen and (max-width: 1280px);
@custom-media --xxl screen and (max-width: 1536px);

:root {
	color-scheme: light dark;

	font-family: Geist, Roboto, Arial, Helvetica, sans-serif;
	text-rendering: optimizeLegibility;
	font-size: var(--font-size);
	line-height: 24px;
	font-weight: 400;
	color: var(--text-1);
	accent-color: var(--primary);

	--primary: hsla(16, 100%, 50%, 1);
	--primary-dark: hsla(12, 79%, 52%, 1);

	--color-01: hsla(35, 100%, 67%, 1);
	--color-02: hsla(27, 100%, 60%, 1);
	--color-03: hsla(9, 79%, 52%, 1);
	--color-04: hsla(6, 70%, 45%, 1);

	--shade-01: hsla(0, 0%, 91%, 1);
	--shade-02: hsla(0, 0%, 85%, 1);
	--shade-03: hsla(0, 0%, 75%, 1);
	--shade-04: hsla(0, 0%, 65%, 1);
	--shade-05: hsla(0, 0%, 54%, 1);

	--text-1: hsl(0, 0%, 13%);
	--text-2: hsl(0, 0%, 27%);
	--text-3: hsl(240, 8%, 44%);
	--text-4: hsl(240, 8%, 64%);
	--text-5: hsl(240, 8%, 90%);

	--nav-bg-color: #f6f8fa;
	--border-color: rgb(168, 168, 168);
	--background-color: hsla(0, 0%, 100%, 1);
	--foreground-color: hsla(220, 13%, 15%, 1);
	color: var(--foreground-color);

	--tooltip-bg-color: rgb(80, 80, 80);
	--tooltip-fg-color: var(--text-5);

	--br: 6px;
	--padding: 8px 16px;
	--outline: 2px solid var(--primary);
	--outline-offset: 0px;
	--font-size: 16px;
	--transition: 0.2s ease-in-out;
	--header-height: 81px; /** Fallback, usually fetched via JS */
	--max-content-width: 700px;
	--nav-min-width: 300px;

	transition-property: color, background-color, border-color, text-decoration-color, fill,
		stroke;
	transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
	transition-duration: 150ms;

	text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.4);
	/*text-shadow: 0.0520833333vw 0.2083333333vw 0.9375vw rgba(255,65,65,.4);*/
	--box-shadow: rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px,
		rgba(0, 0, 0, 0.1) 0px 10px 15px -3px,
		rgba(0, 0, 0, 0.1) 0px 4px 6px -4px --triple-box-shadow: -3px 3px 0 -1px #fff,
		-3px 3px 0 0 #242424, -6px 6px 0 -1px #fff, -6px 6px 0 0 #242424;

	--shade-01: hsla(0, 0%, 12%, 1);
	--shade-02: hsla(0, 0%, 15%, 1);
	--shade-03: hsla(0, 0%, 20%, 1);
	--shade-04: hsla(0, 0%, 31%, 1);
	--shade-05: hsla(0, 0%, 37%, 1);

	--text-1: hsl(0, 0%, 90%);
	--text-2: hsl(0, 0%, 80%);
	--text-3: hsl(0, 0%, 65%);
	--text-4: hsl(0, 0%, 45%);
	--text-5: hsl(0, 0%, 25%);

	--nav-bg-color: #101010;
	--border-color: #2e2e2e;
	--background-color: #181818;
	--foreground-color: #f8f9fa;
	--box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;

	--tooltip-bg-color: rgb(128, 128, 128);
	--tooltip-fg-color: rgb(255, 255, 255);
}

